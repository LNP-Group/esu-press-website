        <img src="https://cdn.esufranchise.com/website/logo.svg" alt="Ethereal Superheroes Universe" />
    </div>
    <ul>
        <li class="link">
            <a href="/">
                Home
            </a>
        </li>
        <li class="link">
            <a href="/press-releases">
                Press Releases
            </a>
        </li>
        <li class="link">
            <a href="/brand-assets">
                Brand Assets
            </a>
        </li>
    </ul>
    <button class="mobile-nav" id="hamburger">
        <span></span>
        <span></span>
        <span></span>
    </button>
</nav>

<ul class="mobile-navigation">
    <li class="link">
        <a href="/">
            Home
        </a>
    </li>
    <li class="link">
        <a href="/press-releases">
            Press Releases
        </a>
    </li>
    <li class="link">
        <a href="/brand-assets">
            Brand Assets
        </a>
    </li>
</ul>

<script is:inline>
    const hamburger = document.getElementById('hamburger');
    const mobileNav = document.querySelector('.mobile-navigation');

    hamburger.addEventListener('click', () => {
        hamburger.classList.toggle('active');
        mobileNav.classList.toggle('active');
    });
</script>